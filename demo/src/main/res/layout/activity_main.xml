<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.polydome.analogclock.AnalogClock
        android:id="@+id/clock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="50dp"
        app:minute_hand_color="@android:color/holo_green_dark"
        app:minute_hand_length="100dp"
        app:minute_hand_width="3dp"
        app:hour_hand_length="40dp"
        app:hour_hand_width="5dp"
        app:face_background="@drawable/ic_clock_face"/>

    <TextView android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello world"/>

</LinearLayout>
