<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnalogClock">
        <!-- Length of the hour hand. -->
        <attr name="hourHandLength" format="dimension"/>

        <!-- Width of the hour hand stroke. -->
        <attr name="hourHandWidth" format="dimension"/>

        <!-- The distance from the view center to the point where hour hand starts.

        Note: This does not affect the hand end, which is controlled with the `hourHandLength` attribute -->
        <attr name="hourHandOffset" format="dimension"/>

        <!-- Color of the hour hand stroke. -->
        <attr name="hourHandColor" format="color"/>

        <!-- Length of the minute hand. -->
        <attr name="minuteHandLength" format="dimension"/>

        <!-- Width of the minute hand stroke. -->
        <attr name="minuteHandWidth" format="dimension"/>

        <!-- The distance from the view center to the point where minute hand starts.

        Note: This does not affect the hand end, which is controlled with the `minuteHandLength` attribute -->
        <attr name="minuteHandOffset" format="dimension"/>

        <!-- Color of the minute hand stroke. -->
        <attr name="minuteHandColor" format="color"/>

        <!-- Clock face background. -->
        <attr name="faceBackground" format="reference"/>
    </declare-styleable>
</resources>